if(NOT DEFINED NOTIFY_COMPILER_IS_GCC_COMPATIBLE)
   if(CMAKE_COMPILER_IS_GNUCXX)
      set(NOTIFY_COMPILER_IS_GCC_COMPATIBLE ON)
   elseif(MSVC)
      set(NOTIFY_COMPILER_IS_GCC_COMPATIBLE OFF)
   elseif("${CMAKE_CXX_COMPILER_ID}" MATCHES "Clang")
      set(NOTIFY_COMPILER_IS_GCC_COMPATIBLE ON)
   elseif("${CMAKE_CXX_COMPILER_ID}" MATCHES "Intel")
      set(NOTIFY_COMPILER_IS_GCC_COMPATIBLE ON)
   endif()
endif()